<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/peru"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/bus_logo_main_imageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/application_logo"
        android:src="@drawable/ic_bus"
        app:layout_constraintBottom_toTopOf="@id/bus_logo_main_textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bus_logo_main_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bustracker"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:theme="@style/FontGlobalRegular"
        app:layout_constraintBottom_toTopOf="@id/bus_logo_main_description_textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bus_logo_main_imageview" />

    <TextView
        android:id="@+id/bus_logo_main_description_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/keep_track_of_your_public_transportation"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:theme="@style/FontGlobalLight"
        app:layout_constraintBottom_toTopOf="@id/button_container_linear_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bus_logo_main_imageview" />

    <LinearLayout
        android:id="@+id/button_container_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bus_logo_main_description_textView">

        <Button
            android:id="@+id/load_map_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_style"
            android:text="@string/load_map"
            android:textColor="@color/white"
            android:theme="@style/FontGlobalBold" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_style"
            android:text="@string/settings"
            android:textColor="@color/white"
            android:theme="@style/FontGlobalBold" />

        <Button
            android:id="@+id/schedules_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/button_style"
            android:text="@string/check_schedules"
            android:textColor="@color/white"
            android:theme="@style/FontGlobalBold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/darker_orange"
    android:padding="5dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="9">

        <TextView
            android:id="@+id/schedule_bus_number"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@string/text_bus_number"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:theme="@style/FontGlobalBold" />

        <LinearLayout
            android:id="@+id/schedule_information_container"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/schedule_bus_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_bus_title"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="18sp"
                android:theme="@style/FontGlobalBold" />

            <TextView
                android:id="@+id/schedule_bus_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="More details about schedule"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:theme="@style/FontGlobalRegular" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>